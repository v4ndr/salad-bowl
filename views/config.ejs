        <button id="valText" type="submit" class="btn btn-block mybtn btn-primary tx-tfm">OK</button>
     </form>
 </div>

<%- include('layouts/footer.ejs') -%>

<script>
     $(()=>{
        $('#minus1').click(()=>{
          var teamNumber = parseInt($('#teamNumber').val());
          teamNumber = teamNumber-1;
          if (teamNumber<1){
              teamNumber = 1;
          }
          $('#teamNumber').val(teamNumber);
        });
        $('#plus1').click(()=>{
          var teamNumber = parseInt($('#teamNumber').val());
          teamNumber = teamNumber+1;
          if (teamNumber>6){
              teamNumber = 6;
          }
          $('#teamNumber').val(teamNumber);
        }); 
      
        $('#minus2').click(()=>{
          var wordsNumber = parseInt($('#wordsNumber').val());
          wordsNumber = wordsNumber-1;
          if (wordsNumber<1){
            wordsNumber = 1;
          }
          $('#wordsNumber').val(wordsNumber);
        });
        $('#plus2').click(()=>{
          var wordsNumber = parseInt($('#wordsNumber').val());
          wordsNumber = wordsNumber+1;
          if (wordsNumber>10){
            wordsNumber = 10;
          }
          $('#wordsNumber').val(wordsNumber);
        }); 
      });
    </script>