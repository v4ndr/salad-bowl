<%- include('layouts/header.ejs') -%>

 <div class="col-md-12 text-center ">
  <form action="/config" method="POST">
    <h1 class="text-uppercase"><%=roomName%></h1>
        <br><br>
        <label>Nombre d'Ã©quipes</label>
        <div class="form-group">
            <button class="noborder-button" id="minus1" type="button"><span class="fa fa-minus fa-lg"></span></button>
            <input type="text" name="teamNumber" class="short-entry" id="teamNumber" value="2" required>
            <button class="noborder-button" id="plus1" type="button"><span class="fa fa-plus fa-lg"></span></button>
        </div>
        <label>Nombre de mots par joueur</label>
        <div class="form-group">
            <button class="noborder-button" id="minus2" type="button"><span class="fa fa-minus fa-lg"></span></button>
            <input type="text" name="wordsNumber" class="short-entry" id="wordsNumber" value="1" required>
            <button class="noborder-button" id="plus2" type="button"><span class="fa fa-plus fa-lg"></span></button>
        </div>
